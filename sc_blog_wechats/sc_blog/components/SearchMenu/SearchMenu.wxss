/* sc_blog/components/SearchMenu/ScarecrowMenu.wxss */
.scSmFrom{
    width: 100%;
    border-top: 1px solid #BFBEBE;
    background-color: #e6e6e6;
}

.scSmHr{
    height: 1px;
    background: linear-gradient(to right, #e6e6e6 0%,#1afa29 20%, yellow 50%, blue 80%, #e6e6e6 100%);
}

.scSmLine{
    white-space: nowrap;
    background-color:  #e6e6e6;
    margin-top: 5px;
    margin-bottom: 5px;
    overflow: hidden;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.scSmTitle{
    text-align: right; 
}

.scSmLine .scSmLineItem{
    display: inline-block;
    margin-left: 5px;
}

.scSmContennt .items{
    margin-left: 5px;
    margin-right: 5px;
}

.tips{
    width: 20px;
    height: 20px;
    margin: auto;
}


.showForm{
    max-height:150px;
    overflow: hidden;
    transition: max-height 2s;
}

.showFormClose{
    max-height:0px;
    overflow: hidden;
    transition: max-height 2s;
}

.isClick{
    color: red;
}

.searchInput{
    border-bottom: 1px solid #8a8a8a;
    width: 150px;
    padding-left: 5px;
    padding-right: 5px;
}