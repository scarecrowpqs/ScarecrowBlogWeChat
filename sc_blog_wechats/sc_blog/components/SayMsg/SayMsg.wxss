.scMsgForm{
    width: 96%;
    margin: 10px auto;
    min-height: 95px;
}

.scMsgForm > view{
    display: inline-block;
    vertical-align: top;
}

.scMsgImg{
    margin-top: 5px;
    width: 60px;
    height: 60px;
    border-radius: 30px;
    background-color: #F2F2F2;
}

.scMsgImg > image{
    width: 100%;
    height: 100%;
    border-radius: 30px;
}

.scMsgContentForm{
    position: relative;
    width: calc(100% - 85px);
    min-height: 70px;
    margin-top: 5px;
    margin-left: 15px;
    background-color: yellow;
}

.scMsgJianTou{
    position: absolute;
    top: 30px;
    width: 10px;
    height: 10px;
    transform-origin: 50% 50%;
    transform: rotate(45deg);
    left: -5px;
    background-color: #F2F2F2;
    border-bottom:2px solid rgba(0, 0, 0, 0.08);
    border-left: 2px solid rgba(0, 0, 0, 0.08);
}

.scMsgContent{
    width: 100%;
    min-height: 70px;
    padding: 10px 5px;
    background-color: #F2F2F2;
    border-radius: 6px;
    box-shadow: 1px 1px 6px rgba(0, 0, 0, 0.36);
    text-indent: 2rem;
    color: #868686;
}

.sxMsgUserName {
    width: 100%;
    height: 26px;
    overflow: hidden;
    font-size: 10px;
    text-align: center;
    color: #868686;
}
