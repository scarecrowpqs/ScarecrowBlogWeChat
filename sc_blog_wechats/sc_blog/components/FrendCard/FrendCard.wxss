/* sc_blog/components/FrendCard/FrendCard.wxss */
.sc_card_form{
    width: 90%;
    margin: 15px auto;
    height: 70px;
    background-color: #F2F2F2;
    border-radius: 6px;
    box-shadow: 1px 1px 6px rgba(0, 0, 0, 0.36);
    padding: 5px;
}

.sc_card_form > view {
    display: inline-block;
    vertical-align: middle;
}

.sc_show_img{
    width: 60px;
    height: 60px;
    margin-top: 5px;
    border-radius: 5px;
    margin-left: 5px;
}

.sc_show_img > image{
    width: 100%;
    height: 100%;
    border-radius: 10px;
}

.sc_show_content{
    margin-left: 10px;
    word-break: break-all;
    width: calc(100% - 85px);
    overflow: hidden;
    max-height: 65px;
}