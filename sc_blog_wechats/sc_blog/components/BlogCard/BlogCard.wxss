/* sc_blog/components/BlogCard/BlogCard.wxss */
.sc_card_form{
    width: 90%;
    margin: 15px auto;
    height: 100px;
    background-color: #F2F2F2;
    border-radius: 6px;
    box-shadow: 1px 1px 6px rgba(0, 0, 0, 0.36);
    padding: 5px;
}

.sc_card_content{
    height: 70px;
}

.sc_card_content > view{
    display: inline-block;
    vertical-align: top;
}

.sc_card_img_v{
    width: 30%;
    height: 100%;
    border-radius: 6px;
}

.sc_card_img_v > image{
    width: 100%;
    height: 100%;
    border-radius: 6px;
}

.sc_card_img_c{
    width: 64%;
    height: 100%;
    margin-left: 3%;
    overflow: hidden;
    word-break: break-all;
}

.sc_card_tips{
    height: 25px;
    margin-top: 5px;
    line-height: 25px;
    font-size: 14px;
    border-top: 1px solid #DFDFE0;   
}

.sc_card_tips > image{
    width:18px;
    height:15px;
    vertical-align: middle;
}

.sc_card_eyes{
    margin-left: 10px;
}

.sc_card_zan{
    margin-left: 20px;
}

.sc_card_text{
    margin-left: 10%;
}